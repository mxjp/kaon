{
	"name": "kaon",
	"version": "0.1.3",
	"homepage": "https://mxjp.github.io/kaon",
	"repository": {
		"type": "git",
		"url": "https://github.com/mxjp/kaon"
	},
	"type": "module",
	"main": "./kaon.js",
	"scripts": {
		"minify": "terser --compress --mangle --toplevel --source-map --output kaon.min.js -- kaon.js",
		"compress": "node scripts/compress.js",
		"build": "npm run minify && npm run compress",
		"test": "node --import=./test-env.js --test ./test.js",
		"prepack": "npm run build && npm test && node scripts/prepack.js"
	},
	"devDependencies": {
		"jsdom": "^26.0.0",
		"terser": "^5.39.0"
	}
}
